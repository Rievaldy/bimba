<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    android:background="@drawable/linearlayout_style"
    android:layout_marginVertical="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/tv_list_nama_biaya"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Nama Biaya"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/decoration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_list_nama_biaya"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="sans-serif"
        android:text=":"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_list_harga_biaya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/decoration"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="sans-serif"
        android:text="Rp. 100.000"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/decorationslash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_list_harga_biaya"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="sans-serif"
        android:text="/"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_list_jenis_pembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/decorationslash"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="sans-serif"
        android:text="Perbulan"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnDeleteListBiaya"
        android:layout_alignParentEnd="true"
        android:background="@drawable/circle_btn_red"
        android:layout_width="25dp"
        android:src="@drawable/minus"
        android:layout_height="25dp"/>

</RelativeLayout>